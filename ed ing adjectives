<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>小學生形容詞遊戲：-ed 與 -ing</title>
    <!-- 引入 Tailwind CSS 確保響應式設計和美觀 -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f7f7f7;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 2rem 1rem;
        }

        /* 模擬 SVG 繪製的互動元件風格 */
        .option-button, .blank-placeholder {
            transition: all 0.2s ease-in-out;
            cursor: pointer;
            user-select: none;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.06);
            border: 2px solid transparent;
        }

        /* 選項按鈕樣式 */
        .option-button {
            background-color: #6366f1; /* Indigo-500 */
            color: white;
            padding: 0.5rem 1.25rem;
            border-radius: 9999px; /* Full rounded */
        }

        .option-button:hover:not(.used) {
            background-color: #4f46e5; /* Indigo-600 */
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.05);
        }

        .option-button.active {
            background-color: #10b981; /* Emerald-500 */
            border-color: #059669; /* Emerald-600 */
            transform: scale(1.05);
        }

        .option-button.used {
            background-color: #a5b4fc; /* Indigo-300 */
            color: #4338ca; /* Indigo-700 */
            cursor: default;
            opacity: 0.6;
            box-shadow: none;
        }

        /* 填空區塊樣式 */
        .blank-placeholder {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            min-width: 100px;
            height: 35px;
            padding: 0 0.5rem;
            margin: 0 0.25rem;
            background-color: #f3f4f6; /* Gray-100 */
            border-radius: 0.5rem;
            color: #1f2937; /* Gray-800 */
            font-weight: 600;
            border: 2px dashed #9ca3af; /* Gray-400 */
            vertical-align: middle;
            font-style: italic;
        }

        .blank-placeholder.filled {
            background-color: #e0f2f1; /* Teal-50 */
            border-color: #14b8a6; /* Teal-500 */
            font-style: normal;
        }

        .blank-placeholder.correct {
            border-color: #10b981; /* Emerald-500 */
            background-color: #d1fae5; /* Emerald-100 */
        }

        .blank-placeholder.incorrect {
            border-color: #f87171; /* Red-400 */
            background-color: #fee2e2; /* Red-100 */
        }

        /* 提交按鈕 */
        #submit-button {
            background-color: #f97316; /* Orange-600 */
        }
        #submit-button:hover {
            background-color: #ea580c; /* Orange-700 */
        }
    </style>
</head>
<body class="bg-gray-50">

    <div id="app" class="w-full max-w-4xl bg-white p-8 md:p-12 rounded-xl shadow-2xl space-y-8">
        <header class="text-center border-b pb-4">
            <h1 class="text-3xl md:text-4xl font-extrabold text-gray-800">
                小學生形容詞遊戲：-ed 與 -ing
            </h1>
            <p class="text-lg text-gray-500 mt-2">
                點擊單字，再點擊空格來完成句子！
            </p>
            <p class="text-sm text-gray-400 mt-1">
                主題：-ed (描述感受) 和 -ing (描述事物特性)
            </p>
        </header>

        <!-- 1. 填空選項區 -->
        <div class="bg-indigo-50 p-6 rounded-lg shadow-inner">
            <h2 class="text-xl font-semibold text-indigo-700 mb-4">單字選項 (Adjective Choices)</h2>
            <div id="options-container" class="flex flex-wrap gap-3 justify-center">
                <!-- 選項將由 JavaScript 渲染 -->
            </div>
        </div>

        <!-- 2. 測驗文章區 -->
        <div class="space-y-6">
            <h2 class="text-xl font-semibold text-gray-700 border-b pb-2">填空段落 (Cloze Passage)</h2>
            <div id="passage-container" class="text-lg leading-loose text-gray-700">
                <!-- 文章將由 JavaScript 渲染 -->
            </div>
        </div>

        <!-- 3. 動作與結果區 -->
        <div class="flex flex-col md:flex-row justify-between items-center pt-4 border-t space-y-4 md:space-y-0">
            <button id="submit-button" class="px-8 py-3 text-lg font-bold text-white rounded-xl shadow-lg hover:shadow-xl transition duration-300 w-full md:w-auto" onclick="checkAnswers()">
                檢查答案 (Check)
            </button>
            <div id="feedback-message" class="text-xl font-bold text-gray-800 transition-opacity duration-500 opacity-0">
                <!-- 答案反饋訊息 -->
            </div>
        </div>
    </div>

    <script>
        // 測驗資料定義 (已簡化為適合小學生閱讀的句子)
        const quizData = [
            // boring/bored (無聊)
            { id: 1, text: "1. The movie was very [BLANK_1]. After watching it, Leo felt [BLANK_2] and wanted to go outside.", answers: { 1: 'boring', 2: 'bored' }, pair: 'boring/bored' },
            // amusing/amused (有趣/被逗樂)
            { id: 2, text: "2. The clown's show was very [BLANK_3]. All the kids felt [BLANK_4] and laughed a lot.", answers: { 3: 'amusing', 4: 'amused' }, pair: 'amusing/amused' },
            // disappointing/disappointed (失望)
            { id: 3, text: "3. Getting a low score was [BLANK_5] news. Tom was very [BLANK_6] with his test result.", answers: { 5: 'disappointing', 6: 'disappointed' }, pair: 'disappointing/disappointed' },
            // exciting/excited (興奮)
            { id: 4, text: "4. This new video game is so [BLANK_7]! I am very [BLANK_8] to play it right now.", answers: { 7: 'exciting', 8: 'excited' }, pair: 'exciting/excited' },
            // touching/touched (感動)
            { id: 5, text: "5. The story about the puppy was very [BLANK_9]. Everyone felt [BLANK_10] and some even cried.", answers: { 9: 'touching', 10: 'touched' }, pair: 'touching/touched' },
            // amazing/amazed (驚奇)
            { id: 6, text: "6. The magic trick was totally [BLANK_11]! I was so [BLANK_12] I couldn't believe my eyes.", answers: { 11: 'amazing', 12: 'amazed' }, pair: 'amazing/amazed' }
        ];

        // 所有的選項 (打亂順序以增加挑戰性)
        const allOptions = [
            'exciting', 'excited', 'boring', 'bored', 'amusing', 'amused',
            'touching', 'touched', 'disappointed', 'disappointing', 'amazing', 'amazed'
        ].sort(() => Math.random() - 0.5);

        let activeOption = null; // 當前被選中的選項
        let userAnswers = {}; // 用戶填入的答案 { blank_id: 'word' }
        let blankElements = {}; // 存儲空白元素的 DOM 引用

        document.addEventListener('DOMContentLoaded', () => {
            renderOptions();
            renderPassage();
        });

        // 渲染填空選項
        function renderOptions() {
            const optionsContainer = document.getElementById('options-container');
            optionsContainer.innerHTML = ''; // 清空現有內容

            allOptions.forEach(word => {
                const button = document.createElement('button');
                button.textContent = word;
                button.className = 'option-button font-medium whitespace-nowrap';
                button.setAttribute('data-word', word);
                button.onclick = () => selectOption(button, word);
                optionsContainer.appendChild(button);
            });
        }

        // 處理選項點擊事件
        function selectOption(button, word) {
            // 清除所有選項的 active 狀態
            document.querySelectorAll('.option-button').forEach(btn => {
                btn.classList.remove('active');
            });

            if (activeOption === word) {
                // 如果點擊了已經選中的選項，則取消選擇
                activeOption = null;
            } else {
                // 否則，設定新的選中選項
                activeOption = word;
                button.classList.add('active');
            }
        }

        // 渲染填空段落
        function renderPassage() {
            const passageContainer = document.getElementById('passage-container');
            passageContainer.innerHTML = '';

            quizData.forEach(item => {
                const parts = item.text.split(/(\[BLANK_\d+\])/g);
                const paragraph = document.createElement('p');
                paragraph.className = 'mb-4'; // 段落間距

                parts.forEach(part => {
                    if (part.startsWith('[BLANK_')) {
                        // 這是填空標記，例如: [BLANK_1]
                        const blankId = part.match(/\[BLANK_(\d+)\]/)[1];
                        const blankPlaceholder = document.createElement('span');

                        // 模擬 SVG 繪製的互動區塊 (使用高度風格化的 span)
                        blankPlaceholder.className = 'blank-placeholder';
                        blankPlaceholder.setAttribute('data-id', blankId);
                        blankPlaceholder.textContent = '...'; // 初始佔位符

                        // 存儲引用以供後續操作
                        blankElements[blankId] = blankPlaceholder;

                        // 點擊空白處填入答案
                        blankPlaceholder.onclick = () => fillBlank(blankPlaceholder, blankId);
                        paragraph.appendChild(blankPlaceholder);
                    } else {
                        // 這是普通文本
                        paragraph.appendChild(document.createTextNode(part));
                    }
                });
                passageContainer.appendChild(paragraph);
            });
        }

        // 處理填空點擊事件
        function fillBlank(blankElement, blankId) {
            if (activeOption) {
                // 1. 更新用戶答案
                userAnswers[blankId] = activeOption;

                // 2. 更新空白處的顯示
                blankElement.textContent = activeOption;
                blankElement.classList.add('filled');
                blankElement.classList.remove('correct', 'incorrect'); // 清除舊的反饋樣式

                // 3. 處理選項按鈕狀態
                // 檢查是否有舊的答案需要釋放
                releaseOldOption(blankId, activeOption);

                // 標記新的選項為 'used'
                const newOptionButton = document.querySelector(`.option-button[data-word="${activeOption}"]`);
                if (newOptionButton) {
                    newOptionButton.classList.add('used');
                    newOptionButton.classList.remove('active'); // 取消 active 狀態
                }

                // 4. 清除當前選中的選項
                activeOption = null;
            } else if (blankElement.classList.contains('filled')) {
                // 如果沒有選中選項，但點擊了已填入的空白，則清除該空白並釋放選項
                const wordToRelease = userAnswers[blankId];
                
                // 釋放選項按鈕
                const optionButton = document.querySelector(`.option-button[data-word="${wordToRelease}"]`);
                if (optionButton) {
                    optionButton.classList.remove('used');
                }

                // 清除空白
                blankElement.textContent = '...';
                blankElement.classList.remove('filled', 'correct', 'incorrect');
                delete userAnswers[blankId];
            }
            // 清除總體反饋訊息
            hideFeedback();
        }

        // 釋放先前填入該空白的選項 (如果有的話)
        function releaseOldOption(currentBlankId, newWord) {
            // 遍歷所有已填答案，找出哪個答案之前填了新詞 'newWord'
            for (const id in userAnswers) {
                if (id !== currentBlankId && userAnswers[id] === newWord) {
                    // 如果這個詞已經被其他空白使用，則不需釋放
                    return;
                }
            }

            // 釋放舊的單字按鈕 (如果存在且未被其他空白使用)
            const oldWord = blankElements[currentBlankId].textContent;
            if (oldWord && oldWord !== '...') {
                const oldOptionButton = document.querySelector(`.option-button[data-word="${oldWord}"]`);
                if (oldOptionButton) {
                     // 檢查這個詞是否被其他空白使用
                    let isUsedElsewhere = Object.values(userAnswers).some((answer, index) => {
                        const otherBlankId = Object.keys(userAnswers)[index];
                        return answer === oldWord && otherBlankId !== currentBlankId;
                    });

                    if (!isUsedElsewhere) {
                        oldOptionButton.classList.remove('used');
                    }
                }
            }
        }


        // 檢查答案並給予反饋
        function checkAnswers() {
            let totalCorrect = 0;
            const totalBlanks = 12;

            quizData.forEach(item => {
                for (const blankId in item.answers) {
                    const correctWord = item.answers[blankId];
                    const userAnswer = userAnswers[blankId];
                    const blankElement = blankElements[blankId];

                    if (blankElement) {
                        blankElement.classList.remove('correct', 'incorrect');

                        if (userAnswer && userAnswer === correctWord) {
                            totalCorrect++;
                            blankElement.classList.add('correct');
                        } else if (userAnswer) {
                            // 錯誤的答案
                            blankElement.classList.add('incorrect');
                        } else {
                            // 未填寫
                            blankElement.classList.remove('filled');
                        }
                    }
                }
            });

            const score = Math.round((totalCorrect / totalBlanks) * 100);
            showFeedback(totalCorrect, totalBlanks, score);
        }

        // 顯示結果訊息
        function showFeedback(correct, total, score) {
            const feedbackElement = document.getElementById('feedback-message');
            let colorClass = 'text-red-500';
            let message = `您總共填對了 ${correct} 題，總分為 ${score} / 100 分。`;

            if (score === 100) {
                colorClass = 'text-green-600';
                message = `太棒了！您填對了所有 ${total} 題，滿分 ${score} / 100！`;
            } else if (score >= 70) {
                colorClass = 'text-orange-500';
            }

            feedbackElement.textContent = message;
            feedbackElement.className = `text-xl font-bold ${colorClass} transition-opacity duration-500 opacity-100`;

            // 提供重新開始的按鈕
            const restartButton = document.createElement('button');
            restartButton.textContent = '重新開始';
            restartButton.className = 'ml-4 px-4 py-2 bg-indigo-500 text-white rounded-lg hover:bg-indigo-600';
            restartButton.onclick = resetQuiz;
            feedbackElement.appendChild(restartButton);
        }
        
        // 隱藏反饋訊息
        function hideFeedback() {
            const feedbackElement = document.getElementById('feedback-message');
            feedbackElement.classList.remove('opacity-100');
            feedbackElement.classList.add('opacity-0');
        }

        // 重置測驗
        function resetQuiz() {
            userAnswers = {};
            activeOption = null;
            hideFeedback();
            
            // 重新渲染選項 (打亂順序並重置狀態)
            allOptions.sort(() => Math.random() - 0.5);
            renderOptions();

            // 重置填空處的顯示
            for (const id in blankElements) {
                blankElements[id].textContent = '...';
                blankElements[id].classList.remove('filled', 'correct', 'incorrect');
            }
        }
    </script>
</body>
</html>
